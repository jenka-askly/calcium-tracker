// Purpose: Configure TypeScript settings for the Expo app.
// Persists: No persistence.
// Security Risks: None.
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "types": ["react", "react-native"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
